@using Cactus.Models.Enums
@model RegisterViewModel

<div class="row align-items-center">
    <div class="col-lg-4">
    </div>
    <div class="col-lg-4 text-left col-lg-offset-1">
        <h3>Регистрация</h3>
        <form asp-action="registration" method="post" class="row g-3" style="max-width: 400px;">
            <div asp-validation-summary="All" class="text-danger"></div>
            <input type="hidden" name="returnUrl" value="@Model.ReturnUrl" />
            <div class="form-group">
                <label asp-for="UserName"></label>
                <input class="form-control" asp-for="UserName" placeholder="Введите прозвище" />
            </div>
            <div class="form-group">
                <label asp-for="FirstName"></label>
                <input class="form-control" asp-for="FirstName" placeholder="Введите имя" />
            </div>
            <div class="form-group">
                <label asp-for="LastName"></label>
                <input class="form-control" asp-for="LastName" placeholder="Введите фамилию" />
            </div>
            <div class="form-group">
                <label asp-for="DateOfBirth"></label>
                <input class="form-control" asp-for="DateOfBirth" placeholder="Введите дату рождения" />
            </div>
            <div class="form-group">
                <label asp-for="Gender"></label>
                <label class="radio-inline">
                    <input type="radio" asp-for="Gender" value="Мужской" />
                    Мужской
                </label>
                <label class="radio-inline">
                    <input type="radio" asp-for="Gender" value="Женский" />
                    Женский
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Country"></label>
                <select asp-for="Country" asp-items="Html.GetEnumSelectList<Country>()"></select>
            </div>
            <div class="form-group">
                <label asp-for="Password"></label>
                <input class="form-control" asp-for="Password" placeholder="Введите пароль" />
            </div>
            <div class="form-group">
                <label asp-for="ConfirmPassword"></label>
                <input class="form-control" asp-for="ConfirmPassword" placeholder="Повторите пароль" />
            </div>
            <div class="form-group">
                <label asp-for="Email"></label>
                <input class="form-control" asp-for="Email" placeholder="Введите почту" />
            </div>
            <button type="submit" class="btn btn-success">Зарегистрироваться</button>
        </form>
    </div>
    <div class="col-lg-4">
    </div>
</div>