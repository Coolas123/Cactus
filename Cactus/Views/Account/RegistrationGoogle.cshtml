@model RegisterGoogleModel

<div class="container">
    <div class="row justify-content-center">
        <div class="col-4 text-left">
            <h3>Авторизация через Google аккаунт</h3>
            <form asp-action="RegistrationGoogleConfirmed" method="post" class="row g-3" style="max-width: 400px;">
                <div asp-validation-summary="All" class="text-danger"></div>
                <input type="hidden" name="returnUrl" value="@Model.ReturnUrl" />
                <div class="form-group">
                    <label asp-for="Email"></label>
                    <input class="form-control" readonly="" asp-for="Email" value="@Model.Email" />
                </div>
                <div class="form-group">
                    <label asp-for="Password"></label>
                    <input class="form-control" asp-for="Password" placeholder="Введите пароль" />
                </div>
                <div class="form-group">
                    <label asp-for="ConfirmPassword"></label>
                    <input class="form-control" asp-for="ConfirmPassword" placeholder="Повторите пароль" />
                </div>
                <button type="submit" class="btn btn-success">Зарегистрироваться</button>
            </form>
        </div>
    </div>
</div>
