@model IEnumerable<Cactus.Models.Database.Complain>

<div class="row">
    <div class="col"></div>
    <div class="col">
        <br>
        <table class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th scope="col">Дата</th>
                    <th scope="col">Тип контента</th>
                    <th scope="col">Тип жалобы</th>
                    <th scope="col">Статус</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Any()) {
                    @foreach (var c in Model) {
                        <tr>
                            <td>@c.Created</td>
                            @if (c.PostId != null) {
                                <td>@(Cactus.Models.Enums.ContentType.Post.GetAttribute<DisplayAttribute>().Name)</td>
                            }
                            else if (c.UserId != null) {
                                <td>@(Cactus.Models.Enums.ContentType.User.GetAttribute<DisplayAttribute>().Name)</td>
                            }
                            else if (c.CommentId != null) {
                                <td>@(Cactus.Models.Enums.ContentType.Comment.GetAttribute<DisplayAttribute>().Name)</td>
                            }
                            <td>@(((Cactus.Models.Enums.ComplainType)c.ComplainTypeId).GetAttribute<DisplayAttribute>().Name)</td>
                            <td>@(((Cactus.Models.Enums.ComplainStatus)c.ComplainStatusId).GetAttribute<DisplayAttribute>().Name)</td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
    <div class="col"></div>
</div>